<Page x:Class="FakeFlightBookingApp.View.AboutUs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FakeFlightBookingApp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutUs"
      Style="{StaticResource PageBackgroundStyle}">

    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- App Name -->
            <TextBlock 
                Text="About Us"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                HorizontalAlignment="Center"
            />


            <!-- Description -->
            <TextBlock 
                Text="Welcome to FakeFlightBookingApp, your go-to platform for effortless and stress-free travel planning!"
                FontSize="14"
                TextAlignment="Center"
                Foreground="White"
                TextWrapping="Wrap"
                Padding="10"
                Margin="0,0,0,15"
            />

            <!-- Features List -->
            <StackPanel   Margin="0,0,0,20">
                <TextBlock Foreground="white" Text="Why Choose Us?" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Foreground="White" Text="Easy Booking – Search, compare, and book flights in just a few clicks." FontSize="14" TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock  Foreground="White" Text="Best Deals – Get access to exclusive discounts and competitive prices." FontSize="14" TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Foreground="White" Text="Seamless Experience – A user-friendly interface designed for smooth navigation." FontSize="14" TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Foreground="White" Text="Personalized Travel – Explore destinations with travel guides and recommendations." FontSize="14" TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>

            <!-- Closing Message -->
            <TextBlock Text="At FakeFlightBookingApp, we believe that travel should be exciting, not complicated. Start your journey with us today and explore the world with confidence!"
                       FontSize="14"
                       TextAlignment="Center"
                       Foreground="White"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>

            <Button Content="Back to Home"
                 Click="BackToHome_Click"
                Style="{StaticResource RoundedButtonStyle}" VerticalAlignment="Center" HorizontalAlignment="Center"
            />

        </StackPanel>
    </Grid>

</Page>
