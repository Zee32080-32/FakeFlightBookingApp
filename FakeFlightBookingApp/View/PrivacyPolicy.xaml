<Page x:Class="FakeFlightBookingApp.View.PrivacyPolicy"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FakeFlightBookingApp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Style="{StaticResource PageBackgroundStyle}"
      Title="PrivacyPolicy">

    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Title -->
            <TextBlock Text="Privacy Policy"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Introduction -->
            <TextBlock Text="Your privacy is important to us. This Privacy Policy explains how we collect, use, and protect your information when using FakeFlightBookingApp."
                       FontSize="14"
                       Foreground="white"
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"/>

            <!-- Data Collection Section -->
            <StackPanel Background="White" Margin="0,0,0,10">
                <TextBlock Text="1. Information We Collect" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="We collect personal data such as name, email, and payment details to process your bookings." FontSize="14" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Data Usage Section -->
            <StackPanel Background="White"  Margin="0,0,0,10">
                <TextBlock Text="2. How We Use Your Data" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="We use your data to provide travel services, improve our app, and send booking confirmations." FontSize="14" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Security Section -->
            <StackPanel Background="White" Margin="0,0,0,10">
                <TextBlock Text="3. Data Security" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="We use encryption and secure servers to protect your data. Your privacy is our priority." FontSize="14" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- User Rights Section -->
            <StackPanel Background="White"   Margin="0,0,0,10">
                <TextBlock Text="4. Your Rights" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="You can update or delete your personal data by contacting support." FontSize="14" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Contact Info -->
            <TextBlock Text="For more details, contact us at support@fakeflightapp.com."
                       FontSize="14"
                       TextAlignment="Center"
                       Foreground="White"
                       TextWrapping="Wrap"
                       Margin="0,0,0,20"/>

            <!-- Button to go back -->
            <Button Content="Back to Home"
                Style="{StaticResource RoundedButtonStyle}"
                Click="BackToHome_Click" HorizontalAlignment="Center" VerticalAlignment="Center"
            />
        </StackPanel>
    </Grid>
</Page>
